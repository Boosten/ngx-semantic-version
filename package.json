{
  "name": "ngx-semantic-version",
  "version": "2.0.0-alpha.1",
  "description": "This schematic will add commitlint, husky, commitizen and standard-version configurations",
  "scripts": {
    "release": "standard-version",
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -p tsconfig.json --watch",
    "test": "npm run build && jasmine **/*_spec.js",
    "dtsgen": "dtsgen src/ng-add/schema.json -o src/ng-add/schema.d.ts"
  },
  "keywords": [
    "schematics",
    "commitlint",
    "commitizen",
    "husky",
    "standard-version",
    "changelog",
    "semver",
    "angular",
    "angular-cli"
  ],
  "author": "Danny Koppenhagen <mail@d-koppenhagen.de> (https://d-koppenhagen.de)",
  "homepage": "https://github.com/d-koppenhagen/ngx-semantic-version",
  "bugs": {
    "url": "https://github.com/d-koppenhagen/ngx-semantic-version/issues",
    "email": "mail@d-koppenhagen.de"
  },
  "license": "MIT",
  "schematics": "./src/collection.json",
  "ng-update": {
    "migrations": "./src/migration.json"
  },
  "dependencies": {
    "@angular-devkit/core": "^9.0.0-rc.2",
    "@angular-devkit/schematics": "^9.0.0-rc.2",
    "typescript": "~3.6.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@schematics/angular": "^9.0.0-rc.2",
    "@types/jasmine": "~3.4.0",
    "@types/node": "^12.11.1",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "husky": "^3.0.9",
    "jasmine": "^3.5.0",
    "standard-version": "^7.0.0",
    "dtsgenerator": "^2.3.1"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
